# https://editorconfig.org/

root = true

[*]
max_line_length = 80
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
insert_final_newline = ignore

[*.py]
indent_size = 4

[*.html]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.bat]
indent_size = 2

[*.rst]
max_line_length = 79

[*.toml]
indent_size = 2
